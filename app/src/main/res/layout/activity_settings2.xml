<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_bg"
    tools:context=".Activity.SettingsActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="25dp"
        android:layout_marginRight="13dp"
        android:layout_toStartOf="@+id/imageView11"
        android:background="@drawable/backbutton2"
        android:padding="14dp"
        app:srcCompat="@drawable/ic_share" />

    <!--
        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-8337023763045237/5587007360"></com.google.android.gms.ads.AdView>

    -->

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/backbutton2"
        android:padding="16dp"
        app:srcCompat="@drawable/ic_close" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:padding="22dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/instructionsbtn"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent"
            android:drawablePadding="10dp"
            android:gravity="left|center"
            android:paddingStart="30dp"
            android:text="INSTRUCTIONS"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/reedembtn"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_below="@id/instructionsbtn"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:drawablePadding="10dp"
            android:gravity="left|center"
            android:paddingStart="30dp"
            android:text="REEDEM"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/settings_btn"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_below="@+id/reedembtn"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_settings"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="left|center"
            android:paddingStart="30dp"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/more_apps_btn"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_below="@+id/settings_btn"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_baseline_vertical_split_24"
            android:drawablePadding="10dp"

            android:fontFamily="@font/poppins_light"
            android:gravity="left|center"
            android:paddingStart="30dp"
            android:text="More Apps"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/contactbtn"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_below="@+id/more_apps_btn"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_baseline_contact_mail_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="left|center"
            android:paddingStart="30dp"
            android:text="Contact us"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


        <Button
            android:id="@+id/review_us_btn"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_below="@+id/contactbtn"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_baseline_star_rate_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="left|center"
            android:paddingStart="30dp"
            android:text="Rate Us"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


        <Button
            android:id="@+id/share_btn"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_below="@+id/review_us_btn"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_share"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="left|center"
            android:paddingStart="30dp"
            android:text="Share"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


    </RelativeLayout>
</RelativeLayout>
